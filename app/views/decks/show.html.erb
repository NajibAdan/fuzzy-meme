<div>
    <h1><%=@deck.name%></h1>
    <p><b>Description</b>: <em><%=@deck.description%></em></p>
    <p>Number of cards: <%=@deck.cards.count%> </p>
    <p>Number of cards to be studied today: <%=@study.count%> </p>
    <p><%= link_to 'Deck Options', '#' %> </p>
    <%= link_to 'Want to checkout the cards?', cards_path(deck_id: @deck.id) %>
    <%= link_to 'Add a card', new_card_path(id: @deck.id) %>
    <%if @study.count > 0 %>
        <%= link_to 'Study?', study_path(id: @deck.id) %>
    <%end%>
</div>