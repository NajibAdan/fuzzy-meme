<% provide(:title, "Decks") %>
<div class='container'>
  <h2>Number of decks: <%=@decks.count%></h2> 
  <div class="text-center"> <%= will_paginate%> </div>
  <%@decks.each do |deck|%>
    <div class="card text-center">
      <div class="card-header">
        <h3><%=deck.name%><h3>
      </div>
      <div class="card-body">
        <%if !deck.description.blank?%>
          <p class="card-text"><%=deck.description%></p>
        <%end%>
        <%= link_to 'View it', deck_path(deck), class:'btn btn-primary'  %>
      </div>
      <div class="card-footer text-muted">
        <%if !deck.due_cards.count.zero?%>
          <%=pluralize(deck.due_cards.count, "card")%> ready to be <%= link_to "studied", study_path(id: deck.id) %>
        <%else%>
          <p> No cards to study in this deck</p>
        <%end%>
    </div>
  <%end%>
  <div class="text-center"> <%= will_paginate%> </div><%= will_paginate%> 
  <%= link_to 'Create a new deck', new_deck_path,class:"badge badge-primary" %>
  <%= link_to 'Tags', tags_path,class:"badge badge-primary" %></div>
</div>
  
  