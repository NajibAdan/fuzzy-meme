<h1> List of deck options </h1>
<div class  = 'row'>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th scope='col'>Name </th>
            <th scope='col'>Easy Bonus value </th>
            <th scope='col'>New Interval value </th>
            <th scope='col'>Interval Modifier value</th>
        </tr>
    </thead>
    <tbody> 
        <%@options.each do |option|%>
            <tr> 
                <td> <%= option.name %> </td>
                <td> <%=option.easyBonus%> </td>
                <td> <%=option.newInterval%> </td>
                <td>  <%=option.intervalModifier%> </td>
                <td> <%= link_to 'Delete?', option_path(option),  method: :delete,
                        data: {confirm: "Are you sure?"}, class:'alert-danger' %> </td>
            </tr>
        <%end%>
    </tbody>
</table>
<div class = 'col-md-6  col-md-offset-4'>
    <%= link_to 'Create one', new_option_path, class:'btn btn-primary'%>
</div>            
</div></div>